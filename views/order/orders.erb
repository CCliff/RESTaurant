<h1>Outstanding Orders</h1>
<h2><a href="orders/history">See Order History</a></h2>
<% @table_array.each do |table| %>
	<h2><a href="/tables/<%= table.id %>/receipt">Table  <%= table.number %></a></h2> 
		<form action="/tables/<%= table.id %>/checkout" method="post">
			<input type="hidden" name="_method" value="patch">
			<input type="submit" value="Pay">
		</form>
	<ul>
		<% @orders.each do |order| %>
			<% if order.table.id == table.id %>
				<li>
					Table <%= order.table.number %> needs <%= order.food_item.name %> 
					<form action="/orders/<%= order.id %>" method="post">
						<input type="hidden" name="_method" value="patch">
						<input type="submit" value="No Charge">
					</form>
					<form action="/orders/<%= order.id %>" method="post">
						<input type="hidden" name="_method" value="delete">
						<input type="submit" value="DELETE">
					</form>
				</li>
			<% end %>
		<% end %>
	</ul>
<% end %>