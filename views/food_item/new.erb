<% if @errors %>
	<div class="errors">
		<h1>You have <%= @errors.count %> <%= @errors.count ==1 ? "error" : "errors" %>!</h1>
	  <ul>
	    <% @errors.each do |error|  %>
	      <li><h2><%= error %></h2></li>
	    <% end %>
	  </ul>
	</div>
<% end %>

<h1>Enter a new food item:</h1>

<div class="background">
	<%= form_open(@food_item, method: 'post') %>
	<%= erb :'/food_item/_form', :locals => {food_item: @food_item} %>
</div>